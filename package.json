{
	"name": "nhentai",
	"version": "3.0.0",
	"description": "A library for interacting with the nhentai API",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"test": "mocha -t 20000 --retries 1 --parallel -r ts-node/register tests/*.test.ts",
		"lint": "eslint --ext .ts --fix src",
		"build": "rm -rf dist/** && tsc",
		"docs": "typedoc --out docs --exclude src/index.ts src",
		"changelog": "conventional-changelog -p angular",
		"prepare": "husky",
		"prettier": "prettier --write \"{src,tests}/*.ts\" \"package.json\"",
		"coverage": "nyc npm run test"
	},
	"keywords": [
		"nhentai",
		"hentai",
		"api",
		"wrapper",
		"r18"
	],
	"author": {
		"name": "DiamondMiner88",
		"url": "https://github.com/DiamondMiner88/"
	},
	"license": "MIT",
	"devDependencies": {
		"@eslint/js": "^9.35.0",
		"@types/chai": "^5.2.2",
		"@types/chai-as-promised": "^8.0.2",
		"@types/mocha": "^10.0.10",
		"@types/node-fetch": "^2.6.13",
		"chai": "^6.0.1",
		"chai-as-promised": "^8.0.2",
		"conventional-changelog-cli": "^5.0.0",
		"eledoc": "^0.2.1",
		"eslint": "^9.35.0",
		"husky": "^9.1.7",
		"istanbul-badges-readme": "^1.9.0",
		"mocha": "^11.7.2",
		"nyc": "^17.1.0",
		"prettier": "^3.6.2",
		"ts-node": "^10.9.2",
		"typedoc": "^0.28.13",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/DiamondMiner88/nhentai.git"
	},
	"bugs": {
		"url": "https://github.com/DiamondMiner88/nhentai/issues"
	},
	"homepage": "https://diamondminer88.github.io/nhentai/index.html",
	"files": [
		"dist/**/*"
	]
}
