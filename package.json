{
    "name": "nhentai",
    "version": "1.0.0",
    "description": "An API wrapper for the nhentai api.",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "test": "mocha -t 10000 -r ts-node/register tests/*.spec.ts",
        "format": "prettier --write \"src/*.ts\"",
        "lint": "tslint -p tsconfig.json",
        "build": "rm -rf lib/** && tsc && copyfiles -u 1 \"src/**/*.d.ts\" lib",
        "prepare": "npm run build",
        "prepublishOnly": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags"
    },
    "keywords": [
        "nhentai",
        "hentai",
        "api",
        "wrapper"
    ],
    "author": "DiamondMiner88",
    "license": "MIT",
    "dependencies": {
        "node-fetch": "^2.6.1"
    },
    "devDependencies": {
        "@types/chai": "^4.2.14",
        "@types/mocha": "^8.0.4",
        "@types/node-fetch": "^2.5.7",
        "chai": "^4.2.0",
        "copyfiles": "^2.4.0",
        "mocha": "^8.2.1",
        "prettier": "^2.1.2",
        "ts-node": "^9.0.0",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.0.5"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/DiamondMiner88/nhentai.git"
    },
    "files": [
        "lib/**/*"
    ]
}
