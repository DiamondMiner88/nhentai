{
    "$schema": "https://json.schemastore.org/commitlintrc",
    "extends": ["@commitlint/config-angular"],
    "rules": {
        "scope-case": [1, "always", "pascal-case"],
        "type-enum": [
            2,
            "always",
            [
                "chore",
                "build",
                "ci",
                "docs",
                "feat",
                "fix",
                "perf",
                "refactor",
                "revert",
                "style",
                "test",
                "types",
                "workflow",
                "wip"
            ]
        ]
    }
}
